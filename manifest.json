{
  "manifest_version": 3,
  "name": "YouTube Audio Selector",
  "version": "0.6.0",
  "description": "Automatically select a predefined audio track on YouTube videos, if audio selection is available.",
  "permissions": ["storage"],
  "externally_connectable": {
    "matches": ["https://www.youtube.com/*"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*", "https://www.youtube.com/embed/*", "https://www.youtube.com/shorts/*"],
      "js": ["setPreferredLanguage.js"],
      "css": ["audioSelector.css"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "homepage_url": "https://github.com/Bloodiko/ytAudioSelector",
  "key": "-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----",
  "icons": {
    "48": "icons/YtBadgeIcon_48.png",
    "64": "icons/YtBadgeIcon_64.png",
    "128": "icons/YtBadgeIcon_128.png"
  }
}
